<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <h1 class="title">
      <%= @post.title %>
    </h1>
    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>
      <div class="level-right">
        <p class="level-item">
          <%= link_to 'Edit', edit_post_path(@post), class: 'button' %>
        </p>
        <p class="level-item">
          <%= link_to 'Remove', post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: " button is-danger" %>
        </p>
      </div>
    </nav>
    <hr />

    <div class="content">
      <%= @post.content %>
    </div>
  </div>
</section>

<section class="comments">
  <div class="container">
    <h2 class="subtitle is-5">
      <strong>
        <%= @post.comments.count %>
      </strong>
      Comments
    </h2>
    <%= render @post.comments %>
    <div class="comment-form">
      <hr />
      <h3 class="subtitle is-3">Leave a reply</h3>
      <%= render 'comments/form' %>
    </div>
  </div>
</section>
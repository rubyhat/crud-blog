<% content_for :page_title, "All posts" %>
<section class="section">
  <div class="container">
  <h1 class="title">Home page</h1>
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to post.title, post %></p>
            </div>
          </div>
          <div class="content">
            <%= post.content %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>